#------------------------------------------------------------------------------------------------------#
dif-local() {
  # Special keyword: local
  if [ "$1" = "local" ]; then
    git difftool --tool=vimdiff --no-prompt HEAD
    return
  fi

  local file="$1"
  local rev="${2:-HEAD}"

  # No args → vimdiff working tree vs HEAD
  if [ -z "$file" ]; then
    git difftool --tool=vimdiff --no-prompt "$rev"
    return
  fi

  # File vs revision
  git difftool --tool=vimdiff --no-prompt "$rev" -- "$file"
}

#------------------------------------------------------------------------------------------------------#
dif() {
  clear

  # Special keyword: local → working tree vs HEAD (all files)
  if [ "$1" = "local" ]; then
    git --no-pager diff --color HEAD
    return
  fi

  # No arguments → last commit, all files
  if [ $# -eq 0 ]; then
    git --no-pager diff --color HEAD~1 HEAD
    return
  fi

  # First argument is a file
  if [ -f "$1" ]; then
    local file="$1"
    local rev1="${2:-HEAD~1}"
    local rev2="${3:-HEAD}"
    git --no-pager diff --color "$rev1" "$rev2" -- "$file"
    return
  fi

  # Revisions only (no file)
  local rev1="${1:-HEAD~1}"
  local rev2="${2:-HEAD}"
  git --no-pager diff --color "$rev1" "$rev2"
}

#------------------------------------------------------------------------------------------------------#
# Compare current file vs last commit (HEAD is default)
# dif2 static/style.css   (dif static/style.css HEAD)
# 
# Compare current file vs 2 commits ago
# dif2 static/style.css HEAD~2
# 
# Compare current file vs 5 commits ago
# dif2 static/style.css HEAD~5
# 
# Compare current file vs specific commit hash
# dif2 static/style.css a1b2c3d
# 
# Compare current file vs a branch
# dif2 static/style.css main
# 
# Compare current file vs a tag
# dif2 static/style.css v1.0.0
#------------------------------------------------------------------------------------------------------#
vimdiff2() {

    git difftool --tool=vimdiff --no-prompt "${2:-HEAD}" -- "$1"
    # git difftool --tool=vimdiff --no-prompt HEAD -- "$1"
}
#------------------------------------------------------------------------------------------------------#
git-reset-main() {
  if [ -z "$1" ]; then
    echo "Usage: git-reset-main <commit-sha>"
    return 1
  fi

  local COMMIT="$1"

  git checkout main || return 1
  git reset --hard "$COMMIT" || return 1
  git push origin main --force
}

