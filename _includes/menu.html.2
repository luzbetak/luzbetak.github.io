<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Kevin Luzbetak Github Pages</title>
  <link rel="stylesheet" type="text/css" href="/style.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/linux2.png" type="image/png" sizes="32x32">
</head>
<body>
  <!-- Navigation Menu -->
  <table width="900">
    <tr>
      <td>
        <div class="navbar">
          <a id="home" href="http://luzbetak.github.io/">Kevin Luzbetak</a>
          <a id="programming" href="http://luzbetak.github.io/programming">Programming</a>
          <a id="teams" href="http://luzbetak.github.io/teams">Teams</a>
          <a href="https://github.com/luzbetak" target="_blank">Github</a>
        </div>
      </td>
    </tr>
  </table>

<script>
// Get the current URL path and normalize it
const currentPath = window.location.pathname;

// Normalize path to ignore trailing slashes
const normalizedPath = currentPath.replace(/\/$/, '');

// Check which menu item should be highlighted
if (normalizedPath === '' || normalizedPath === '/index.html') {
  document.getElementById('home').classList.add('active');  // Highlight "Kevin Luzbetak"
} else if (normalizedPath.includes('/programming')) {
  document.getElementById('programming').classList.add('active');  // Highlight "Programming"
} else if (normalizedPath.includes('/teams')) {
  document.getElementById('teams').classList.add('active');  // Highlight "Teams"
}
</script>
</body>
</html>

